{
  "$schema": "https://json-schema.org/draft-07/schema",
  "$id": "https://github.com/instill-ai/model-backend/blob/main/config/models/model_instance.json",
  "type": "object",
  "title": "Model instance",
  "description": "The model instance data structure",
  "additionalProperties": false,
  "required": ["id", "state", "model_definition", "configuration"],
  "properties": {
    "name": {
      "type": "string",
      "title": "Resource name",
      "description": "The resource name",
      "readOnly": true,
      "ui_order": 0,
      "ui_hidden": true,
      "ui_disabled": true,
      "ui_component": "text"
    },
    "uid": {
      "type": "string",
      "format": "uuid",
      "title": "UUID",
      "description": "The unique UUID",
      "readOnly": true,
      "ui_order": 1,
      "ui_hidden": true,
      "ui_disabled": true,
      "ui_component": "text"
    },
    "id": {
      "type": "string",
      "title": "Name",
      "description": "The model instance name",
      "minLength": 1,
      "readOnly": true,
      "ui_order": 2,
      "ui_hidden": true,
      "ui_disabled": true,
      "ui_component": "text"
    },
    "state": {
      "type": "string",
      "title": "State",
      "description": "The model instance state",
      "enum": [
        "STATE_UNSPECIFIED",
        "STATE_OFFLINE",
        "STATE_ONLINE",
        "STATE_ERROR"
      ],
      "default": "STATE_UNSPECIFIED",
      "readOnly": true,
      "ui_order": 3,
      "ui_hidden": true,
      "ui_disabled": true,
      "ui_component": "select",
      "ui_enum": ["", "Offline", "Online", "Error"]
    },
    "task": {
      "type": "string",
      "title": "Task",
      "description": "The model instance task",
      "enum": ["TASK_UNSPECIFIED", "TASK_CLASSIFICATION", "TASK_DETECTION"],
      "default": "TASK_UNSPECIFIED",
      "readOnly": true,
      "ui_order": 4,
      "ui_hidden": true,
      "ui_disabled": true,
      "ui_component": "select",
      "ui_enum": ["", "Image classification", "Object detection"]
    },
    "model_definition": {
      "type": "string",
      "title": "The model definition resource name",
      "description": "The resource name of the model definition",
      "readOnly": true,
      "ui_order": 5,
      "ui_hidden": true,
      "ui_disabled": true,
      "ui_component": "text"
    },
    "configuration": {
      "type": "object",
      "title": "Configuration",
      "description": "Model instance configuration JSON that has been validated using the `model_spec` JSON schema of a ModelDefinition",
      "readOnly": true,
      "ui_order": 6,
      "ui_disabled": true
    },
    "create_time": {
      "type": "string",
      "format": "date-time",
      "title": "Create time",
      "description": "The date when the model is created in the format YYYY-MM-DDTHH:MM::SS",
      "examples": ["2022-04-29T00:20:06.703547Z"],
      "readOnly": true,
      "ui_order": 7,
      "ui_hidden": true,
      "ui_disabled": true,
      "ui_component": "text"
    },
    "update_time": {
      "type": "string",
      "format": "date-time",
      "title": "Update time",
      "description": "The date when the model is updated in the format YYYY-MM-DDTHH:MM::SS",
      "examples": ["2022-04-29T01:33:34.910865Z"],
      "readOnly": true,
      "ui_order": 8,
      "ui_hidden": true,
      "ui_disabled": true,
      "ui_component": "text"
    }
  }
}
